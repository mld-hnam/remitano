{
  "name": "@finbase/fincare",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@ant-design/icons": "^4.6.3",
    "@craco/craco": "^6.4.4",
    "antd": "^4.21.5",
    "antd-dayjs-webpack-plugin": "^1.0.6",
    "axios": "^0.27.2",
    "craco-alias": "^3.0.1",
    "craco-antd": "^2.0.0",
    "craco-less": "^2.0.0",
    "dayjs": "^1.10.6",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "numeral": "^2.0.6",
    "query-string": "^7.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.0.4",
    "react-query": "^3.19.6",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "react-to-print": "^2.14.7",
    "universal-cookie": "^4.0.4",
    "use-resize-observer": "^9.0.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "build": "cross-env CI=true && craco build",
    "prettier": "prettier -c --write \"**/(*.js|*.jsx|*.less)\"",
    "start": "craco start",
    "eslint": "eslint --cache --ext .js,.jsx ./src",
    "stylelint": "stylelint --aei src/**/*.less",
    "lint": "yarn eslint && yarn stylelint",
    "test": "cross-env NODE_ENV=test craco test",
    "verify": "yarn lint && cross-env CI=true yarn test --coverage",
    "analyze": "source-map-explorer 'build/static/js/*.js'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.2.1",
    "babel-jest": "^28.1.2",
    "cross-env": "^7.0.3",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-prettier": "^4.2.1",
    "jest-junit": "^14.0.0",
    "prettier": "^2.3.2",
    "source-map-explorer": "^2.5.2",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-prettier": "^2.0.0",
    "webpack-filter-warnings-plugin": "^1.2.1"
  },
  "jest": {
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "cobertura"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/service-worker.js",
      "!src/**/index.js",
      "!src/App.js",
      "!src/*.{js,jsx}",
      "!src/config/*.js",
      "!src/locales/*.js",
      "!src/**/routes.js",
      "!**/locales/**/*.*",
      "!src/libs/test/**",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 50,
        "branches": 50,
        "functions": 50,
        "lines": 50
      }
    }
  }
}
